<script>
function updateClock() {
    const now = new Date();
    const hours = now.getHours().toString().padStart(2, '0');
    const minutes = now.getMinutes().toString().padStart(2, '0');
    document.getElementById('clock').textContent = `${hours}:${minutes}`;
}

updateClock();
setInterval(updateClock, 60000);

// Global setTranslate function
function setTranslate(xPos, yPos, el) {
    el.style.transform = `translate(${xPos}px, ${yPos}px)`;
}

// Function to make a window draggable
function makeWindowDraggable(window) {
    const header = window.querySelector('.window-header');
    let isDragging = false;
    let currentX;
    let currentY;
    let initialX;
    let initialY;
    let xOffset = 0;
    let yOffset = 0;

    header.addEventListener('mousedown', dragStart);
    document.addEventListener('mousemove', drag);
    document.addEventListener('mouseup', dragEnd);

    function dragStart(e) {
        if (e.target === header || header.contains(e.target)) {
            if (!e.target.classList.contains('close-button')) {
                initialX = e.clientX - xOffset;
                initialY = e.clientY - yOffset;
                isDragging = true;
            }
        }
    }

    function drag(e) {
        if (isDragging) {
            e.preventDefault();
            currentX = e.clientX - initialX;
            currentY = e.clientY - initialY;
            xOffset = currentX;
            yOffset = currentY;

            setTranslate(currentX, currentY, window);
        }
    }

    function dragEnd(e) {
        initialX = currentX;
        initialY = currentY;
        isDragging = false;
    }
}

// Make all windows draggable
makeWindowDraggable(document.querySelector('.notepad-window'));
makeWindowDraggable(document.querySelector('.browser-window'));
makeWindowDraggable(document.querySelector('.image-window'));

const notepadIcon = document.querySelector('.desktop-icon');
const notepadWindow = document.querySelector('.notepad-window');
const notepadCloseButton = document.getElementById('notepad-close');

notepadIcon.addEventListener('dblclick', () => {
    notepadWindow.style.display = 'block';
});

notepadCloseButton.addEventListener('click', () => {
    notepadWindow.style.display = 'none';
});

const browserIcon = document.getElementById('browser-icon');
const browserWindow = document.querySelector('.browser-window');
const browserCloseButton = document.getElementById('browser-close');

browserIcon.addEventListener('dblclick', () => {
    browserWindow.style.display = 'block';
});

browserCloseButton.addEventListener('click', () => {
    browserWindow.style.display = 'none';
});

const imageIcon = document.getElementById('image-icon');
const imageWindow = document.querySelector('.image-window');
const imageCloseButton = document.querySelector('.image-window .close-button');

imageIcon.addEventListener('dblclick', () => {
    imageWindow.style.display = 'block';
});

imageCloseButton.addEventListener('click', () => {
    imageWindow.style.display = 'none';
});

function showNotification(message) {
    const notification = document.getElementById('welcome-notification');
    notification.textContent = message;
    notification.style.display = 'block';
    
    setTimeout(() => {
        notification.style.display = 'none';
    }, 6000); // Show for 6 seconds
}

const startButton = document.querySelector('.start-button');
const startMenu = document.querySelector('.start-menu');
let startMenuVisible = false;

startButton.addEventListener('click', (e) => {
    e.stopPropagation();
    startMenuVisible = !startMenuVisible;
    startMenu.style.display = startMenuVisible ? 'block' : 'none';
});

// Handle menu items
document.querySelectorAll('.menu-item').forEach(item => {
    item.addEventListener('click', (e) => {
        if (item.textContent.trim() === 'Shut Down') {
            const errorWindow = document.querySelector('.error-window');
            errorWindow.style.display = 'block';
        }
        startMenu.style.display = 'none';
        startMenuVisible = false;
    });
});

// Add error window close handler
document.querySelector('.error-button').addEventListener('click', () => {
    document.querySelector('.error-window').style.display = 'none';
});

// Close start menu when clicking outside
document.addEventListener('click', (e) => {
    if (!startButton.contains(e.target) && !startMenu.contains(e.target) && startMenuVisible) {
        startMenuVisible = false;
        startMenu.style.display = 'none';
    }
});

window.addEventListener('load', () => {
    showNotification("Welcome Seliq OS Demo 1.0! this is a demo version of Seliq OS, so there is not much to do in here, we will add apps soon!");
});
</script>
</body></html>
